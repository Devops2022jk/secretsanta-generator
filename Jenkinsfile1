pipeline {
    agent any
    
    tools {
        jdk 'jdk17'
        maven 'maven3'
    }
    
    environment{
        SCANNER_HOME= tool 'sonar-scanner'
    }

    stages {
        stage('git-checkout') {
            steps {
                git changelog: false, poll: false, url: 'https://github.com/Devops2022jk/secretsanta-generator.git'
            }
        }
        
        stage('code-compile') {
            steps {
                sh "mvn clean compile"
            }
        }
        
        stage('unit-test') {
            steps {
                sh "mvn test"
            }
        }
        
        stage('Owasp-Dependency-check') {
            steps {
                dependencyCheck additionalArguments: ' --scan ./ ', odcInstallation: 'dc'
                dependencyCheckPublisher pattern: '**/dependency-check-report.xml'
            }
        }
        
        stage('Code-Build') {
            steps {
                sh "mvn clean package"
            }
        }
        
        stage('Sonar-Code-Analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh ''' $SCANNER_HOME/bin/sonar-scanner -Dsonar.projectName=Santa \
                    -Dsonar.java.binaries=. \
                    -Dsonar.projectKey=Santa '''
                    }
            }
        }

        stage('Docker Build') {
            steps {
               script{
                   withDockerRegistry(credentialsId: 'docker-cred') {
                    sh "docker build -t  santa12 . "
                 }
               }
            }
        }

        stage('Docker Push') {
            steps {
               script{
                   withDockerRegistry(credentialsId: 'docker-cred') {
                    sh "docker tag santa1234 devopsjk2023/santa12:latest"
                    sh "docker push devopsjk2023/santa12:latest"
                 }
               }
            }
        }
        
       stage('Docker Deploy') {
            steps {
                sh "docker container run -it -d -p 86:8080 --name webapp devopsjk2023/santa12:latest"
            }
        } 
        
    }
}
